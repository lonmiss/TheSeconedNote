package homeWork6;

import java.util.Scanner;

public class EmployeeManagementSystem {
	Scanner str = new Scanner(System.in); 

	
	//打印一个员工的信息
	public static void selfInforment (Employee a){
		String s1="编号："+a.getNo()+"姓名："+a.getName()+"   身高："+a.getHeight()+"   体重："+a.getWeight();
		System.out.println(s1);
	}
	//添加人员
	public void addPeo(String no,String name,float height,float weight,Employee a){
		a.setNo(no);
		a.setName(name);
		a.setHeight(height);
		a.setWeight(weight);
	}
	//根据编号修改职工体重信息
	public void alterPeo(Employee[] arr,String no,float weightData) {
		for (int i = 0; i < arr.length; i++) {
			if(arr[i].getNo()==no){
				arr[i].setWeight(weightData);
				selfInforment(arr[i]);
				break;
			}
		}
	}
	//根据姓名查找职工信息
	public void findName(Employee[] arr,String name){
		for (int i = 0; i < arr.length; i++) {
			if(arr[i].getName()==name){
				selfInforment(arr[i]);
				break;
			}
		}
	}
	//显示所有职工信息
	public static void printAll(Employee[] arr){
		for (int i = 0; i < arr.length; i++) {
			selfInforment(arr[i]);
		}
	}
	
	// 输出框
	public void startWindows(Employee[] peoNums){
		while(true){
			System.out.println("职工管理系统=====\n"+"1、修改职工信息\n"+"2、修改职工信息\n"+"3、查找职工信息\n"+"4、删除职工信息\n"+"5、显示所有职工信息\n"+"6、退出系统");
			int flag;
			flag=str.nextInt();
			switch (flag) {
			case 1:
			{
				
				break;
			}case 2:
			{
				//根据职工编号修改职工体重并打印
				System.out.println("请输入该员工的编号");
				String id=str.next();
				System.out.println("请输入该员工现在体重");
				float nowWeight=str.nextFloat();
				alterPeo(peoNums,id,nowWeight);
				break;
			}case 3:
			{
				
				break;
			}case 4:
			{
				
				break;
			}case 5:
			{
				printAll(peoNums);
				break;
			}case 6:
			{
				System.exit(0);
				break;
			}default:
			{
				System.out.println("请输入合法字符");
				break;
			}
		}
	}
	

}
